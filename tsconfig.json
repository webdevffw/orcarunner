{
  "compilerOptions": {
    "target": "ES2019",
    "module": "ES2020",
    "moduleResolution": "Bundler",
    "declaration": true,
    "declarationDir": "dist/types",
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "noImplicitAny": false,
    "types": ["node"],
    "baseUrl": "src",
    "paths": {
      "@/*": ["*"],
      "@controllers/*": ["controllers/*"],
      "@lib/*": ["lib/*"],
      "@models/*": ["models/*"],
      "@modules/*": ["modules/*"],
      "@utils/*": ["utils/*"],
      "@state/*": ["state/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["dist/*"]
}
